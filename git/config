[alias]
	a = add
	aa = add -A
	b = branch
	ba = branch --all --verbose --verbose
	c = commit
	co = switch
	d = diff
	f = fetch
	g = grep
	l = log --graph --oneline -20
	la = "!git config --list | grep alias | cut -c 7-"
	ll = log --graph --oneline
        ls = show --name-only
	lv = log --graph
	m = merge
	n = clean
	pl = pull
	ps = push
	pr = pull --rebase
	r = rebase
        rs = restore
        ru = remote update
	s = status
	su = submodule update --init --recursive
        xx = restore -WSs@

[color]
	branch = auto
	diff = auto
	grep = auto
	status = auto

[core]
	autocrlf = input

[diff]
	tool = opendiff

[push]
	default = current

[rerere]
	enabled = true
