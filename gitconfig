[alias]

[credential]
   helper = osxkeychain

[color]
    branch = auto
    diff = auto
    grep = auto
    status = auto

[core]
    excludesfile = /Users/Dale/.gitignore_global
    autocrlf = input

[diff]
    tool = opendiff

[difftool]
    prompt = false

[difftool "opendiff"]
    cmd = opendiff "$LOCAL" "$REMOTE"

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 

[format]
    pretty = oneline

[include]
    path = .dale/gitconfig

[merge]
    tool = opendiff
    conflictstyle = diff3

[mergetool]
    prompt = false
    keepBackup = true

[mergetool "opendiff"]
    cmd = opendiff "$LOCAL" "$REMOTE" -merge "$MERGED" -ancestor "$BASE"
    trustExitCode = true

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
    default = simple

[rerere]
    enabled = true

