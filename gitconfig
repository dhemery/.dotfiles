[alias]

[credential]
    helper = osxkeychain

[color]
    branch = auto
    diff = auto
    grep = auto
    status = auto

[core]
    excludesfile = ~/.gitignore_global
    autocrlf = input

[format]
    pretty = oneline

[include]
    path = .dale/gitconfig

[mergetool "opendiff"]
    cmd = opendiff $LOCAL $REMOTE -ancestor $BASE -merge $MERGED
    trustExitCode = true

[merge]
    tool = opendiff
    conflictstyle = diff3

[push]
    default = simple

