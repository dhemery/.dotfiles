[alias]

[credential]
   helper = osxkeychain

[color]
    branch = auto
    diff = auto
    grep = auto
    status = auto

[core]
    excludesfile = ~/.gitignore_global
    autocrlf = input

[diff]
    tool = opendiff

[difftool]
    prompt = false

[difftool "opendiff"]
    cmd = opendiff "$LOCAL" "$REMOTE"

[format]
    pretty = oneline

[include]
    path = .dale/gitconfig

[merge]
    tool = opendiff
    conflictstyle = diff3

[mergetool]
    prompt = false
    keepBackup = true

[mergetool "opendiff"]
    cmd = opendiff "$LOCAL" "$REMOTE" -merge "$MERGED" -ancestor "$BASE"
    trustExitCode = true

[push]
    default = simple

[rerere]
    enabled = true

[user]
    name = Dale Emery
    email = dale@dhemery.com
