[alias]

[credential]
    helper = osxkeychain

[color]
    branch = auto
    diff = auto
    grep = auto
    status = auto

[core]
    excludesfile = ~/.gitignore_global
    autocrlf = input

[diff]
    tool = Kaleidoscope

[difftool]
    prompt = false

[difftool "Kaleidoscope"]
   cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[format]
    pretty = oneline

[include]
    path = .dale/gitconfig

[merge]
    tool = Kaleidoscope
    conflictstyle = diff3
    prompt = false

[mergetool]
    prompt = false

[mergetool "Kaleidoscope"]
    cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
    trustExitCode = true

[push]
    default = simple

[user]
    name = Dale Emery
    email = dale@dhemery.com
