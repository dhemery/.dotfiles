[alias]

[credential]
    helper = osxkeychain

[color]
    branch = auto
    diff = auto
    grep = auto
    status = auto

[core]
    excludesfile = ~/.gitignore_global
    autocrlf = input

[diff]
    tool = opendiff

[difftool]
    prompt = false

[difftool "opendiff"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$MERGED\" 

[format]
    pretty = oneline

[include]
    path = .dale/gitconfig

[merge]
    tool = opendiff
    conflictstyle = diff3

[mergetool]
    prompt = false

[mergetool "opendiff"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\" -merge \"$MERGED\" -ancestor \"$BASE\"
    trustExitCode = true

[push]
    default = simple

