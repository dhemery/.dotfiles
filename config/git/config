[alias]
	a = add
	aa = add -A
	b = branch
	ba = branch -avv
	c = commit
	cp = cat-file -p
	ct = cat-file -t
	d = diff
	dh = diff HEAD
	di = diff --staged
	dp = diff --no-prefix
	dt = difftool
	f = fetch
	fpr = "!f() { git fetch $1 pull/$2/head:pr/$2; }; f"
	g = grep
	hc = "!f() { git clone git@github.com:$1/$2.git "${@:3}"; }; f"
	l = log --graph --oneline -20
	lo = log --graph --oneline
	ll = log --graph
	la = "!git config -l | grep alias | cut -c 7-"
	m = merge
	ms = merge --squash
	mt = mergetool
	my = "!f() { git hc dhemery "$@" ; }; f"
	n = clean
	o = checkout
	ob = checkout -b
	pl = pull
	ps = push
	pr = pull --rebase
	r = rebase
	s = status
	su = submodule update --init

[color]
	branch = auto
	diff = auto
	grep = auto
	status = auto

[core]
	autocrlf = input

[diff]
	tool = opendiff

[include]
	path = ~/.dale/gitconfig

[push]
	default = current

[rerere]
	enabled = true
