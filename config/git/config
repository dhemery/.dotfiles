[alias]
    a = add
    aa = add -A
    b = branch
    ba = branch -avv
    c = commit
    cat = cat-file -p
    d = diff
    dc = diff --cached
    dp = diff --no-prefix
    dt = difftool
    f = fetch
    g = grep
    hc = "!f() { git clone https://github.com/$1/$2.git "${@:3}"; }; f"
    l = log
    # list aliases
    la = "!git config -l | grep alias | cut -c 7-"
    m = merge
    ms = merge --squash
    mt = mergetool
    my = "!f() { git hc dhemery "$@" ; }; f"
    n = clean
    o = checkout
    ob = checkout -b
    pl = pull
    ps = push
    pr = pull --rebase
    r = rebase
    s = status
    su = submodule update --init
    v = svn
    vc = svn dcommit
    vf = svn fetch
    vr = svn rebase

[credential]
   helper = osxkeychain

[color]
    branch = auto
    diff = auto
    grep = auto
    status = auto

[core]
    autocrlf = input

[diff]
    tool = opendiff

[difftool]
    prompt = false

[difftool "opendiff"]
    cmd = opendiff "$LOCAL" "$REMOTE"

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[format]
    pretty = oneline

[include]
    path = .dale/gitconfig

[merge]
    tool = opendiff
    conflictstyle = diff3

[mergetool]
    prompt = false
    keepBackup = true

[mergetool "opendiff"]
    cmd = opendiff "$LOCAL" "$REMOTE" -merge "$MERGED" -ancestor "$BASE"
    trustExitCode = true

[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
    default = simple

[rerere]
    enabled = true

[user]
    name = Dale Emery
    email = dale@dhemery.com
path =
