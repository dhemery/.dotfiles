[alias]
	a = add
	aa = add -A
	al = "!git config -l | grep alias | cut -c 7-"
	b = branch
	ba = branch -avv
	c = commit
	d = diff
	dh = diff HEAD
	ds = diff --staged
	f = fetch
	g = grep
	l = log --graph --oneline -40
	la = log --graph
	ll = log --graph --oneline
	m = merge
	mt = mergetool
	n = clean
	o = checkout
	ob = checkout -b
	pl = pull
	ps = push
	pr = pull --rebase
	r = rebase
	s = status
	su = submodule update --init --recursive

[color]
	branch = auto
	diff = auto
	grep = auto
	status = auto

[core]
	autocrlf = input

[diff]
	tool = opendiff

[include]
	path = ~/.git_local

[push]
	default = current

[rerere]
	enabled = true
